<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 	NavigationPage.HasNavigationBar="false"
	xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="VotKwik.ThankYouPageBallot">
	<AbsoluteLayout BackgroundColor = "#3B4371" Padding = "15,0,15,0">
		<Image Source="Congratulations.png" 
				Aspect="AspectFit"
				AbsoluteLayout.LayoutBounds="0.5,0.10,0.75,100"
				AbsoluteLayout.LayoutFlags = "PositionProportional, WidthProportional" />

		<StackLayout VerticalOptions="Center"
				HorizontalOptions = "Center"
				AbsoluteLayout.LayoutBounds = "0.5,0.5,1,300"
				AbsoluteLayout.LayoutFlags = "PositionProportional, WidthProportional" >

		<Label Text = "Thank You !" 
				FontAttributes = "Bold" 
				FontSize = "30" 
				TextColor="White" 
				HorizontalTextAlignment = "Center"/>
		<Label Text = "Voting ballot created successfully. Check your messages for ballot code." 
				FontSize ="24" 
				TextColor = "#a2a1b8" 
				HorizontalTextAlignment = "Center" /> 
		</StackLayout>

		<Button Text="Vote" x:Name="moreVote"
				TextColor="White"
				FontSize="15" 
				BackgroundColor="#ec2e40"
				Margin = "-15,0,-15,0"
				AbsoluteLayout.LayoutBounds="0.5, 1, 1,60"
				AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
				Clicked = "Handle_Clicked"	/>
	</AbsoluteLayout>	

</ContentPage>
